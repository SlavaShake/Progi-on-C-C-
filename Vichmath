//

#include "stdafx.h"
#include <iostream>
#include <math.h>
#include <ctime>
#include <iomanip>
# define M_PI       3.14159265 /* pi */

using namespace std;

void ZapolnenieMass(int dx, float de, int w, int n);
float Function(float x, int n);

int _tmain(int argc, _TCHAR* argv[])
{	
	int xb=0,n=9,w;
	float xe=M_PI/2;
	cout << "Input frequency of function, w= ";
	cin >> w;
	cout << endl;
	ZapolnenieMass(xb,xe,w,n);
	cout << "Hello World!" << endl;
	cout << "runtime = " << clock() / 1000.0 << endl; // время работы программы   
	system("pause");
	return 0;
}
void ZapolnenieMass(int xb, float xe, int w, int n)
{
	float **mass = new float* [3];
	for (int count = 0; count < 3; count++)
	mass[count] = new float[w];
	for (int k = 0; k < w; ++k)
	{
		//unsigned int start_time = clock(); // начальное время
		float dx = (xe - xb) / w;
		float c = xb + dx / 2;
		mass[0][k] = c + dx*k;
		mass[1][k] = Function(mass[0][k], n);
		//unsigned int end_time = clock(); // конечное время
		//unsigned int search_time = end_time - start_time; // искомое время
		//mass[2][k] = search_time;
	}
	for (int i = 0; i < 2; ++i)
	{
		for (int j = 0; j < w; ++j)
		{
			cout << " | " << fixed << setprecision(4) << mass[i][j] << " | ";
		}
		cout << endl;
	}
}
float Function(float x,int n)
{
	float func;
	func = sin(n / (x + 1)) + pow(cos(n*x),2);
	return func;
}
